test(
  "never",
  () => do {
    conf = {
      effect: binaryIdentity,
      decorate: DATED_CONFIG.decorate,
      change: DATED_CONFIG.change,
      check: (_, _, _) => false,
    }
    return assertEquals(
      pipe(
        signalWithConfig(conf, tag("yo"), "blah"),
      )("raw"),
      "raw",
    )
  },
)
